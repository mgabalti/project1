
@model MyApp.Models.ViewModels.CategoryVM;
@{
    ViewData["Title"] = "Index";

}
@if(TempData["success"] != null)
{
 
    <h3> @TempData["success"]</h3>
}
<h1>Index</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>category</th>
            <th colspan="2" class="text-center">Action</th>
        </tr>
    </thead>
  <tbody>
        @foreach(var item in Model.PostCategories)
    {
        <tr>
                <td>@item.CatName</td>
                <td><a asp-controller="Category" asp-action="CreateUpdate" asp-route-id="@item.Id" class=" btn btn-success pointer p-2">Edit</a></td>
                <td><a asp-controller="Category" asp-action="DeletePost" asp-route-id="@item.Id" class="btn btn-danger pointer p-2">Del</a></td>
        </tr>
        
    }
  </tbody>
</table>